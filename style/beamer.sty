\providecommand{\sharepath}{..}%

\setbeamerfont{title}{size=\LARGE}
\setbeamerfont{frametitle}{size=\LARGE}

\setbeamertemplate{frametitle} 
{
  \begin{centering}
    \smallskip 
    \insertframetitle\par 
    \smallskip
  \end{centering}
  } 

\setbeamertemplate{itemize item}{\color{KiTEdark}$\bullet$}

\setbeamertemplate{background}{
    \begin{tikzpicture}[remember picture,overlay]
        \node[anchor=north east] at (current page.north east) {\includegraphics[width=0.08\paperwidth]{img/northeast}};
    \end{tikzpicture}
}

\setbeamertemplate{navigation symbols}{} 

\setbeamertemplate{footline}[text line]{% 
  \hfill\strut{% 
    \scriptsize\sf\color{KiTEgray}% 
    \quad\insertframenumber 
  }% 
  \hfill 
} 

\setbeamertemplate{title page}
{
    \smallskip
  \begin{centering}
    {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}\par % Title
    \smallskip
    {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle}\par % Subtitle
    \medskip
    {\usebeamerfont{author}\insertauthor}\par % Author
    \smallskip
    {\usebeamerfont{institute}\insertinstitute}\par % Institute
    {\usebeamerfont{date}\insertdate}\par % Date
    \begin{center}
      \usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
    \end{center}
  \end{centering}
}

\let\oldblock\block
\let\endoldblock\endblock

% change block by adding smallskip
\renewenvironment{block}[1]
{\begin{oldblock}{#1}
    \smallskip
  } 
  { 
  \end{oldblock}
}

